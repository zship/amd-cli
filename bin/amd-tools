#!/usr/bin/env node

var path = require('path');
require('node-amd-require')({
	baseUrl: path.resolve(__dirname, '..'),
	paths: {
		'amd-tools': '../amd-tools/src'
	}
});
Object.keys(require.cache).forEach(function(name) {
	if (name.search('amd-tools/dist') !== -1) {
		delete require.cache[name];
	}
});

var log = require('../src/util/log');

try {
	require('../src/amd-tools.js').cli();
}
catch (e) {
	log.error(e.stack);
}
